<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="2dp">
            <EditText
                android:id="@+id/txt_cashier_search"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edittext_dialog"
                android:ems="10"
                android:hint="Product Id"
                android:inputType="number"
                android:textColor="@color/myColorEditTextDialogDisable"
                android:textColorHint="@color/myColorEditTextDialogDisable" />

            <EditText
                android:id="@+id/dummy_ba_kamo"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnRegisterQuantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/custom_button_payment_mode"
                android:onClick="setRegisterQuantity"
                android:text="1"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <ImageButton
            android:id="@+id/btn_cashier_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:tint="@color/myColorButtonDelete"
            app:srcCompat="@drawable/ic_delete_black_36px" />

        <Button
            android:id="@+id/btn_cashier_confirmDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="Confirm"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clipChildren="false"
        android:padding="10dp"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>