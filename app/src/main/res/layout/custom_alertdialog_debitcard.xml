<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myColorDialogBG"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="DEBIT CARD"
            android:textColor="@color/myColorBackgroundWhite"
            android:textSize="20dp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etDebitBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/custom_edittext_dialog"
            android:elevation="2dp"
            android:hint="Debit Card Company"
            android:inputType="textCapCharacters"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etDebitNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/custom_edittext_dialog"
            android:elevation="2dp"
            android:hint="Debit Card Number"
            android:inputType="number"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etDebitExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/custom_edittext_dialog"
            android:elevation="2dp"
            android:hint="Debit Card Expiry"
            android:inputType="number"
            android:textColor="@color/myColorEditTextDialogDisable"
            android:textColorHint="@color/myColorDialogBG" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnEnterDebit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight=".5"
                android:background="@drawable/custom_button_dialog"
                android:elevation="2dp"
                android:text="SUBMIT"
                android:textColor="@color/myColorBackgroundWhite"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>